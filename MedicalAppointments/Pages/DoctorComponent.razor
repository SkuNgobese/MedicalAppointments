@page "/Doctors"

<h2 class="text-2xl font-bold mb-4">Doctors</h2>

<EditForm Model="doctorVM" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <h4>@(isEditing ? "Edit Doctor" : "Add Doctor")</h4>

    <div class="grid grid-cols-2 gap-4 mb-4">
        <InputText class="form-control" @bind-Value="doctorVM.Title" placeholder="Title" />
        <InputText class="form-control" @bind-Value="doctorVM.FirstName" placeholder="First Name" />
        <InputText class="form-control" @bind-Value="doctorVM.LastName" placeholder="Last Name" />
        <InputText class="form-control" @bind-Value="doctorVM.IDNumber" placeholder="ID Number" />
        <InputText class="form-control" @bind-Value="doctorVM.Specialization" placeholder="Specialization" />
        <InputDate class="form-control" @bind-Value="doctorVM.HireDate" />
    </div>

    <div class="row">
        <div class="col-md-6">
            <fieldset class="border p-3 rounded mb-3">
                <legend class="float-none w-auto px-2">Address</legend>

                <div class="mb-3">
                    <label class="form-label">Street</label>
                    <InputText class="form-control" @bind-Value="doctorVM.AddressDetails.Street" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Suburb</label>
                    <InputText class="form-control" @bind-Value="doctorVM.AddressDetails.Suburb" />
                </div>

                <div class="mb-3">
                    <label class="form-label">City</label>
                    <InputText class="form-control" @bind-Value="doctorVM.AddressDetails.City" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Postal Code</label>
                    <InputText class="form-control" @bind-Value="doctorVM.AddressDetails.PostalCode" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Country</label>
                    <InputText class="form-control" @bind-Value="doctorVM.AddressDetails.Country" />
                </div>
            </fieldset>
        </div>

        <div class="col-md-6">
            <fieldset class="border p-3 rounded mb-3">
                <legend class="float-none w-auto px-2">Contact</legend>

                <div class="mb-3">
                    <label class="form-label">Contact Number</label>
                    <InputText class="form-control" @bind-Value="doctorVM.ContactDetails.ContactNumber" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" @bind-Value="doctorVM.ContactDetails.Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Fax</label>
                    <InputText class="form-control" @bind-Value="doctorVM.ContactDetails.Fax" />
                </div>
            </fieldset>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">@((isEditing ? "Update" : "Add"))</button>
</EditForm>

@if (doctors is not null && doctors.Any())
{
    <ul class="space-y-2">
        @foreach (var doctor in doctors)
        {
            <li class="p-4 border rounded shadow-sm flex justify-between items-center">
                <span>
                    <strong>@doctor.FullName</strong> - @doctor.Specialization
                </span>
                <span>
                    <button class="btn btn-sm btn-warning" @onclick="() => EditDoctor(doctor)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(doctor)">Delete</button>
                </span>
            </li>
        }
    </ul>
}
else
{
    <p>No doctors found.</p>
}

@if (showDeleteModal)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <p>Are you sure you want to delete <strong>@doctorToDelete?.FullName</strong>?</p>
            <button class="btn btn-danger" @onclick="DeleteDoctor">Yes, Delete</button>
            <button class="btn btn-secondary" @onclick="() => showDeleteModal = false">Cancel</button>
        </div>
    </div>
}